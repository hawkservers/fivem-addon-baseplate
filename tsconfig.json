{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES5",
    "allowJs": false,
    "lib": [
      "es2017",
      "dom",
      "es2020.bigint"
    ],
    "types": ["@citizenfx/server", "@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./**/*"],
  "exclude": ["./out/**/*"]
}
